<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
{% style %}
.slide{
    display: flex;
}

.slide-left, .slide-right{
    width: 50%;
}

.slide-right img{
    width: 100%;
    height: auto;
}

.slide-title{
    font-weight: bold;
    font-size: 32px;
}

{% endstyle %}
<section class="page-width">
<div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
    {% for i in (1..2) %}
    {% assign dummy = 'slider' | append:i %}
    {% assign slide = product.metafields[dummy] %}
        <div class="swiper-slide">
            <div class="slide">
                <div class="slide-left">
                    <h2 class="slide-title">{{ slide.title.value }}</h2>
                    <p class="slide-description">{{ slide.description.value }}</p>
                </div>
                <div class="slide-right">
                    <img src="{{ slide.image | image_url: width: 800 }}" loading="lazy">
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
  
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  
    <!-- If we need scrollbar -->
    <div class="swiper-scrollbar"></div>
  </div>
<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>

{% javascript %}

const swiper = new Swiper('.swiper', {
  // Optional parameters
  direction: 'horizontal',
  loop: true,
  autoplay: true,

  // If we need pagination
  pagination: {
    el: '.swiper-pagination',
  },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },

  // And if we need scrollbar
  scrollbar: {
    el: '.swiper-scrollbar',
  },
});

{% endjavascript %}
</section>

{% schema %}
{
  "name": "Slider",
  "tag": "section",
  "class": "slider",
  "settings": [
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
  ]
}
{% endschema %}