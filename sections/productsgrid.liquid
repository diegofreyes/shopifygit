{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .product_variations{
    display: flex;
    margin-bottom: 16px;
  }
  .product_color{
    margin-right: 8px;
  }

  .product_color input{
    display: none;
  }

  .product_color_option{
    display: block;
    width: 24px;
    height: 24px;
    border-radius: 100%;
    border: 2px solid #D7D7D7;
  }

  {% assign colors = settings.product_color_schema | split: " " %}
  {% for color in colors %}
    {% assign item = color | split: ":" %}
    .product_color_option-{{ item[0]}}{
      background-color: {{ item[1] }}
    }
  {% endfor %}

  .product_color input:checked ~ .product_color_option{
    border: 2px solid #525B73;
  }

  .product_button{
    display: flex;
    margin-bottom: 16px;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 48px;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
<div class="facets-vertical page-width">
<ul class="grid product-grid">
    {% for product in collections[section.settings.collection].products %}

    <li class="grid__item">
    {% render 'card-product',
        card_product: product,
        lazy_load: true,
        section_id: section.id,
        has_only_default_variant: false,
        show_quick_add: true
    %}
    </li>
    {% endfor %}
</ul>

<ul class="grid product-grid">
    {% for product in collections[section.settings.collection].products %}

    <li class="grid__item">
      <a href="{{ product.url }}">
        <img 
          loading="lazy"
          src="{{ product | image_url: width: 300 }}">
      </a>

      <h2>{{ product.title }}</h2>
      
      <div class="product_variations">
      {% for product_option in product.variants %}
          <label class="product_color">
            <input type="radio" data-id="{{ product_option.id  }}" name="color" data-price="{{ product_option.price | money_with_currency }}" data-img="{{product_option.image | image_url: width: 300}}">
            <span class="product_color_option product_color_option-{{product_option.title}}"></span>
            
          </label>
      {% endfor %}
      </div>
    
      <span class="product_price"> {{ product.price | money_with_currency }}</span>
      <button class="product_button" data-id="" disabled="disabled">{{ 'products.product.add_to_cart' | t }}</button>
    </li>
    {% endfor %}
</ul>
</div>
</div>

{%- javascript -%}
const products = document.querySelectorAll("li.grid__item");

let formData = {
 'items': []
};

products.forEach( product => {
  let productOptions = product.querySelectorAll("input[type='radio']");
  let productButton = product.querySelector("button");
  let productPrice = product.querySelector("span.product_price");
  productOptions.forEach( function( option ){
    option.addEventListener('click', function(){
      let id = this.getAttribute('data-id');
      let price = this.getAttribute('data-price');
      let image = this.getAttribute('data-img');
      let productImage = product.querySelector("img");
      productImage.src = image;
      productButton.setAttribute("data-id", id);
      productButton.removeAttribute("disabled");
      productPrice.innerHTML = price;
    });
  });

  let responseJson;

  productButton.addEventListener('click', function(){
    let formData = {
    'items': [{
      'id': this.getAttribute('data-id'),
      'quantity': 1
      }],
      sections: "cart-icon-bubble"
    };

    fetch(window.Shopify.routes.root + 'cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(formData)
    })
    .then(response => {
      alert("Item has been added to cart");
      return response.json();
    })
    .then(data => renderCartItems(data))
    .catch((error) => {
      console.error('Error:', error);
    });
  })
});

